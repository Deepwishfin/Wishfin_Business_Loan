<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="8dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/relit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/loanamountlinear"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loan amount"
                    android:textColor="#64748B"
                    android:textSize="12sp" />

                <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                    android:id="@+id/loan_amount_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:maxLines="2"
                    android:textColor="#0F1A2A"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emi"
                    android:textColor="#64748B"
                    android:textSize="12sp" />

                <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                    android:id="@+id/emi_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:maxLines="2"
                    android:textColor="#0F1A2A"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loanamountlinear"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Interest Rate"
                    android:textColor="#64748B"
                    android:textSize="12sp" />

                <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                    android:id="@+id/joiningfees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:maxLines="2"
                    android:textColor="#0F1A2A"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Processing Fees"
                    android:textColor="#64748B"
                    android:textSize="12sp" />

                <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                    android:id="@+id/annualfees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:maxLines="2"
                    android:textColor="#0F1A2A"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                    android:id="@+id/viewdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedbutton"
                    android:gravity="center"
                    android:padding="10sp"
                    android:text="Apply Now"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>