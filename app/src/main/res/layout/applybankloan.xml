<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFBFD"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15sp"
                android:paddingTop="15sp"
                android:paddingRight="15sp"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:id="@+id/backbutton"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:gravity="center|left">


                    <ImageView
                        android:layout_width="17sp"
                        android:layout_height="17sp"
                        android:layout_gravity="center"
                        android:background="@drawable/backarrowblack"
                        android:contentDescription="TODO" />
                </RelativeLayout>

                <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Submit Information"
                    android:textColor="#2E384D"
                    android:textSize="16sp" />

            </LinearLayout>

            <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                android:id="@+id/subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="16sp"
                android:text="Next:Confirmation Page"
                android:textColor="#788691"
                android:textSize="12sp" />

            <com.wishfin.wishfinbusinessloan.FontClasses.RobotFont
                android:id="@+id/cardname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="16sp"
                android:text=""
                android:textColor="#2E384D"
                android:textSize="14sp" />

        </LinearLayout>


        <ScrollView
            android:id="@+id/pagetwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15sp"
                    android:visibility="visible"
                    tools:ignore="MissingConstraints">

                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:text="Company Name"
                        android:textColor="#2E384D"
                        android:textSize="14sp" />

                    <AutoCompleteTextView
                        android:id="@+id/companyname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextback"
                        android:hint="Enter Company"
                        android:imeOptions="actionNext"
                        android:inputType="textPostalAddress"
                        android:padding="10sp"
                        android:singleLine="true"
                        android:textColor="#304258"
                        android:textColorHint="#B0BAC9"
                        android:textSize="14sp" />


                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:id="@+id/monthly_incomehead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:text="Monthly Salary"
                        android:textColor="#2E384D"
                        android:textSize="14sp" />

                    <com.wishfin.wishfinbusinessloan.MenuHidingEditText
                        android:id="@+id/monthly_income"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextback"
                        android:hint="Enter Salary"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:longClickable="false"
                        android:maxLength="20"
                        android:padding="10sp"
                        android:singleLine="true"
                        android:textColor="#304258"
                        android:textColorHint="#B0BAC9"
                        android:textSize="14sp" />


                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:id="@+id/gross_salaryhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:text="Gross Salary"
                        android:textColor="#2E384D"
                        android:textSize="14sp" />

                    <com.wishfin.wishfinbusinessloan.MenuHidingEditText
                        android:id="@+id/gross_salary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextback"
                        android:ems="10"
                        android:hint="Enter Salary"
                        android:inputType="number"
                        android:maxLength="20"
                        android:padding="10sp"
                        android:text=""
                        android:textColor="#304258"
                        android:textColorHint="#B0BAC9"
                        android:textSize="14sp"
                        tools:ignore="LabelFor">

                    </com.wishfin.wishfinbusinessloan.MenuHidingEditText>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                            android:id="@+id/officeaddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="10sp"
                            android:text="Office Address"
                            android:textColor="#2E384D"
                            android:textSize="14sp" />

                        <com.wishfin.wishfinbusinessloan.MenuHidingEditText
                            android:id="@+id/officeline1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10sp"
                            android:background="@drawable/edittextback"
                            android:hint="Full Address"
                            android:imeOptions="actionNext"
                            android:inputType="textPostalAddress"
                            android:longClickable="false"
                            android:maxLength="19"
                            android:padding="10sp"
                            android:singleLine="true"
                            android:textColor="#304258"
                            android:textColorHint="#B0BAC9"
                            android:textSize="14sp" />

                        <com.wishfin.wishfinbusinessloan.MenuHidingEditText
                            android:id="@+id/officeline2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10sp"
                            android:visibility="gone"
                            android:background="@drawable/edittextback"
                            android:hint="Address Line 2"
                            android:imeOptions="actionNext"
                            android:inputType="textPostalAddress"
                            android:longClickable="false"
                            android:maxLength="40"
                            android:padding="10sp"
                            android:singleLine="true"
                            android:textColor="#304258"
                            android:textColorHint="#B0BAC9"
                            android:textSize="14sp" />

                        <com.wishfin.wishfinbusinessloan.MenuHidingEditText
                            android:id="@+id/officeline3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10sp"
                            android:visibility="gone"
                            android:background="@drawable/edittextback"
                            android:hint="Address Line 3"
                            android:imeOptions="actionNext"
                            android:inputType="textPostalAddress"
                            android:longClickable="false"
                            android:maxLength="20"
                            android:padding="10sp"
                            android:singleLine="true"
                            android:textColor="#304258"
                            android:textColorHint="#B0BAC9"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <AutoCompleteTextView
                                android:id="@+id/officecity"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2sp"
                                android:layout_weight="1"
                                android:background="@drawable/edittextback"
                                android:hint="City"
                                android:imeOptions="actionNext"
                                android:inputType="textPostalAddress"
                                android:padding="10sp"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/officepincode"
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_margin="2sp"
                                android:layout_weight="1"
                                android:background="@drawable/edittextback"
                                android:hint="Pincode"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="6"
                                android:padding="10sp"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14sp" />


                        </LinearLayout>
                    </LinearLayout>

                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:id="@+id/continuebtn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/roundedbutton"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="Submit"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
