<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFBFD"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15sp"
                android:paddingTop="15sp"
                android:paddingRight="15sp"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:id="@+id/backbutton"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:gravity="center|left">


                    <ImageView
                        android:layout_width="17sp"
                        android:layout_height="17sp"
                        android:layout_gravity="center"
                        android:background="@drawable/backarrowblack"
                        android:contentDescription="TODO" />
                </RelativeLayout>

                <com.wishfin.wishfinbusinessloan.FontClasses.RobotFont
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Need Few More Details"
                    android:textColor="#2E384D"
                    android:textSize="20sp" />

            </LinearLayout>

            <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                android:id="@+id/subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="16sp"
                android:text="Submission Page"
                android:textColor="#788691"
                android:textSize="12sp" />

            <com.wishfin.wishfinbusinessloan.FontClasses.RobotFont
                android:id="@+id/cardname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="16sp"
                android:text=""
                android:textColor="#2E384D"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/pageone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15sp"
                    android:visibility="visible"
                    tools:ignore="MissingConstraints">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5sp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                                android:id="@+id/mobilenumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15sp"
                                android:layout_marginBottom="10sp"
                                android:text="Mobile Number"
                                android:textColor="#2E384D"
                                android:textSize="14sp" />

                            <com.wishfin.wishfinbusinessloan.MenuHidingEditText
                                android:id="@+id/mobile_number"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittextback"
                                android:clickable="false"
                                android:cursorVisible="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint="Enter Mobile Number"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:longClickable="false"
                                android:maxLength="10"
                                android:padding="10sp"
                                android:singleLine="true"
                                android:textColor="#304258"
                                android:textColorHint="#B0BAC9"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>


                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:id="@+id/emailid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="10sp"
                        android:text="Email"
                        android:textColor="#2E384D"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <com.wishfin.wishfinbusinessloan.MenuHidingEditText
                        android:id="@+id/email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittextback"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Enter Email"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:longClickable="false"
                        android:padding="10sp"
                        android:singleLine="true"
                        android:textColor="#304258"
                        android:textColorHint="#B0BAC9"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Property Identified?"
                        android:textColor="#0F2F4D"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <RadioGroup
                        android:id="@+id/rgprop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/yescheck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/primary"
                            android:checked="false"
                            android:text="Yes"
                            android:textColor="#001738" />

                        <RadioButton
                            android:id="@+id/nocheck"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/primary"
                            android:checked="true"
                            android:text="No"
                            android:textColor="#001738" />
                    </RadioGroup>





                    <LinearLayout
                        android:id="@+id/residentlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">







                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <LinearLayout
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                                    android:id="@+id/pincodehead"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:layout_marginBottom="10sp"
                                    android:text="Company"
                                    android:textColor="#2E384D"
                                    android:textSize="14sp" />

                                <Spinner
                                    android:id="@+id/spinnercompanytype"
                                    android:layout_width="match_parent"
                                    android:layout_height="48dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/textviewback"
                                    android:entries="@array/companytype" />

                            </LinearLayout>



                        </LinearLayout>


                    </LinearLayout>


                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:id="@+id/continuebtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/roundedbutton"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="Submit Form"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
