<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FAFBFD"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15sp"
                android:paddingTop="15sp"
                android:paddingRight="15sp"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:id="@+id/backbutton"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:gravity="center|left">


                    <ImageView
                        android:layout_width="17sp"
                        android:layout_height="17sp"
                        android:layout_gravity="center"
                        android:background="@drawable/backarrowblack"
                        android:contentDescription="TODO" />
                </RelativeLayout>

                <com.wishfin.wishfinbusinessloan.FontClasses.RobotFont
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="#2E384D"
                    android:textSize="20sp" />

            </LinearLayout>

            <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                android:id="@+id/subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="16sp"
                android:text="Submission Page"
                android:textColor="#788691"
                android:textSize="12sp" />

            <com.wishfin.wishfinbusinessloan.FontClasses.RobotFont
                android:id="@+id/cardname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginBottom="16sp"
                android:text=""
                android:textColor="#2E384D"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/pageone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15sp"
                    android:visibility="visible"
                    tools:ignore="MissingConstraints">


                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:text="Monthly salary"
                        android:textColor="#2E384D"
                        android:textSize="14sp" />

                    <com.wishfin.wishfinbusinessloan.MenuHidingEditText
                        android:id="@+id/monthlysalary"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="2sp"
                        android:background="@drawable/edittextback"
                        android:hint="Monthly Salary"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="10sp"
                        android:textColor="#304258"
                        android:textColorHint="#B0BAC9"
                        android:textSize="14sp" />

                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:text="Business Age"
                        android:textColor="#2E384D"
                        android:textSize="14sp" />

                    <com.wishfin.wishfinbusinessloan.MenuHidingEditText
                        android:id="@+id/businessage"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="2sp"
                        android:background="@drawable/edittextback"
                        android:hint="Business Age"
                        android:inputType="number"
                        android:maxLength="3"
                        android:padding="10sp"
                        android:textColor="#304258"
                        android:textColorHint="#B0BAC9"
                        android:textSize="14sp" />

                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:text="Business Revenue"
                        android:textColor="#2E384D"
                        android:textSize="14sp" />

                    <com.wishfin.wishfinbusinessloan.MenuHidingEditText
                        android:id="@+id/businessrevenue"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="2sp"
                        android:background="@drawable/edittextback"
                        android:hint="Business Revenue"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="10sp"
                        android:textColor="#304258"
                        android:textColorHint="#B0BAC9"
                        android:textSize="14sp" />

                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:text="Business Registered As"
                        android:textColor="#2E384D"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/select_registeredas"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edittextback"
                        android:entries="@array/array_registered_as"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:textSize="14sp"
                        tools:ignore="RtlSymmetry" />


                    <com.wishfin.wishfinbusinessloan.FontClasses.InterFont
                        android:id="@+id/applybtn"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/roundedbutton"
                        android:gravity="center"
                        android:padding="10sp"
                        android:text="Apply"
                        android:textAllCaps="true"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />



                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>